{
  "name": "rf-oss-util",
  "version": "2.0.0",
  "private": true,
  "main": "public/electron.js",
  "author": {
    "name": "Tan Chia Yan",
    "email": "chiayan@steadcom.my"
  },
  "repository": {
    "type": "git",
    "url": "https://tchiayan@bitbucket.org/tchiayan/rfoss.git"
  },
  "dependencies": {
    "@ag-grid-community/all-modules": "^22.0.0",
    "@ag-grid-community/react": "^22.0.0",
    "@material-ui/core": "^4.10.1",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.55",
    "bootstrap": "^4.3.1",
    "cors": "^2.8.5",
    "csv-parser": "^2.3.3",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.2.0",
    "exceljs": "^3.4.0",
    "expr-eval": "^2.0.2",
    "express": "^4.17.1",
    "firebase": "^7.15.1",
    "firebase-admin": "^9.1.1",
    "highcharts": "^7.2.1",
    "highcharts-custom-events": "^3.0.4",
    "highcharts-react-official": "^3.0.0",
    "moment": "^2.27.0",
    "nan": "^2.14.0",
    "node-machine-id": "^1.1.12",
    "nodemon": "^2.0.4",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.2.0",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-window": "^1.8.5",
    "save-dev": "0.0.1-security",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "sqlite3": "^4.1.0",
    "styled-components": "^5.1.1",
    "xlstream": "^1.0.11",
    "xlsx": "^0.15.2"
  },
  "scripts": {
    "electron": "electron .",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "electron-install-deps": "electron-builder install-app-deps",
    "eject": "react-scripts eject",
    "build-upload-python": "pyinstaller python\\upload.py --onefile --distpath=public",
    "build-excel-python": "pyinstaller python\\excel.py --onefile --distpath=public",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=always",
    "prepublish": "react-scripts build && pyinstaller python\\upload.py --onefile --distpath=public && pyinstaller python\\excel.py --onefile --distpath=public",
    "publish": "electron-builder --publish=always",
    "start-digiserver": "nodemon ./server/index.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "better-docs": "^2.3.2",
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0",
    "jsdoc": "^3.6.5"
  },
  "homepage": ".",
  "build": {
    "appId": "com.electron.rfosstool",
    "productName": "RF OSS",
    "asar": true,
    "artifactName": "${productName}_Setup_${version}.${ext}",
    "files": [
      "!build/upload.exe",
      "!build/excel.exe"
    ],
    "extraResources": [
      {
        "from": "build/upload.exe",
        "to": "app.asar.unpacked/upload.exe"
      },
      {
        "from": "build/excel.exe",
        "to": "app.asar.unpacked/excel.exe"
      }
    ],
    "win": {
      "publish": [
        {
          "provider": "generic",
          "url": "https://storage.googleapis.com/rfoss/"
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
